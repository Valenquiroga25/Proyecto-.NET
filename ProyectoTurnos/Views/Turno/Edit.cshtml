@using Microsoft.IdentityModel.Abstractions
@model ProyectoTurnos.Models.Turno

@{
    ViewData["Title"] = "Edit";
}

<h3>Editar datos</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdTurno" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 7px;">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 7px;">
                <label asp-for="idPaciente" class="control-label"></label>
                <input asp-for="idPaciente" class="form-control" />
                <span asp-validation-for="idPaciente" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 7px;">
                <label asp-for="idConsulta" class="control-label"></label>
                <input asp-for="idConsulta" class="form-control" />
                <span asp-validation-for="idConsulta" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px; margin-bottom: 7px;">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
          
            <div style="margin-top: 15px">
                <input type="hidden" asp-for="IdTurno"/>
                <input type="submit" value="Editar" class="btn btn-outline-primary"/>
                <a asp-action="Index2" asp-route-id="@Model?.idPaciente" class="button btn btn-outline-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


